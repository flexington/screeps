{
    "compilerOptions": {
      "module": "amd",
      "target": "es6",
      "moduleResolution": "Node",
      "outDir": "ptr",
      "outFile": "ptr/main.js",
      "baseUrl": "TS/",
      "sourceMap": true,
      "strict": false,
      "experimentalDecorators": true,
      "noImplicitReturns": true,
      "allowSyntheticDefaultImports": true,
      "allowUnreachableCode": false,
      "removeComments": true
    },
    "exclude": [
      "node_modules"
    ]
  }